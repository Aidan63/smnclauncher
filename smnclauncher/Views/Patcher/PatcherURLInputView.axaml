<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="smnclauncher.Views.Patcher.PatcherURLInputView">
  <Grid RowDefinitions="*,*">
    <Grid Grid.Row="0" ColumnDefinitions="1*,2*">
      <TextBlock Grid.Column="0" Text="Google Drive Link" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3"/>
      <TextBox Name="InputUrl" Grid.Column="1" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
    <Button
      Name="BttnPatch"
      Grid.Row="1"
      Content="Download and Patch"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      HorizontalContentAlignment="Center"
      VerticalContentAlignment="Center"/>
  </Grid>
</UserControl>
