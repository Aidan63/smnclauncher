<Window
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
  x:Class="smnclauncher.Views.CredentialsWindow">
  <Grid RowDefinitions="3*,*,*,*,*">
    <Viewbox
      Grid.Row="0"
      VerticalAlignment="Center"
      Width="48"
      Height="48">
      <Canvas Width="24" Height="24">
        <Path Fill="Black" Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
      </Canvas>
    </Viewbox>
    <TextBlock Grid.Row="1" Margin="3" Text="Username" VerticalAlignment="Bottom"/>
    <TextBox Grid.Row="2" Margin="3" Name="InputUsername" VerticalContentAlignment="Center"/>
    <TextBlock Grid.Row="3" Margin="3" Text="Password"  VerticalAlignment="Bottom"/>
    <TextBox Grid.Row="4" Margin="3" Name="InputPassword" VerticalContentAlignment="Center" PasswordChar="*"/>
  </Grid>
</Window>
