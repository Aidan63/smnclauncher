<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="smnclauncher.Views.AuthenticateView">
  <Grid RowDefinitions="*,*,*">
    <TextBox Grid.Row="0" Margin="3" Name="InputUsername" VerticalContentAlignment="Center"/>
    <TextBox Grid.Row="1" Margin="3" Name="InputPassword" VerticalContentAlignment="Center" PasswordChar="*"/>
    <Button Grid.Row="2" Margin="3" Name="BttnLogin" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Check"/>
  </Grid>
</UserControl>
